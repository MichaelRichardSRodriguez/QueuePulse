@model ServicesVM

@{
    ViewData["Title"] = "Modify Service";
}

<div class="container col-md-5 mt-4">
	<div class="row card p-3 border-top border-2 shadow rounded" style="background-color:azure;">
		<h4><strong>Department Modification</strong></h4>
		<hr/>
		<div class="card-body">
			<form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="QueueService.Id" />
                <div class="form-group">
                    <label asp-for="QueueService.Department_Id" class="control-label"></label>
                    <select asp-for="QueueService.Department_Id" class="form-select" asp-items="@Model.DepartmentList" autofocus></select>
                    <span asp-validation-for="QueueService.Department_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QueueService.Name" class="control-label"></label>
                    <input asp-for="QueueService.Name" class="form-control" />
                    <span asp-validation-for="QueueService.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QueueService.Prefix" class="control-label"></label>
                    <input type="text" asp-for="QueueService.Prefix" class="form-control" />
                    <span asp-validation-for="QueueService.Prefix" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QueueService.Description" class="control-label"></label>
                    <textarea asp-for="QueueService.Description" class="form-control" style="height:120px;"></textarea>
                    <span asp-validation-for="QueueService.Description" class="text-danger"></span>
                </div>
				<div class="form-group mt-2">
                    <button type="submit" class="btn btn-success w-25">Save</button>
                    <a asp-action="Index" class="btn btn-secondary w-25">Back to List</a>
				</div>
			</form>
		</div>
	</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
