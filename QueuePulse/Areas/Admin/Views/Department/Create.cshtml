@model Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="container col-md-5 mt-4">
    <div class="row card p-3 border-top border-2 shadow rounded" style="background-color:azure;">
        <h4><strong>Department Creation</strong></h4>
        <hr />
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" autofocus/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" style="height:120px;"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-success w-25">Create</button>
                    <a asp-action="Index" class="btn btn-secondary w-25">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
