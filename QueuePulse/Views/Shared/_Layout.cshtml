
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - QueuePulse</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/QueuePulse.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" asp-append-version="true" />
	<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.15.3/dist/sweetalert2.min.css" rel="stylesheet">
	<!-- Add Font Awesome CDN link -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">QueuePulse</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Guest" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Guest" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Guest" asp-controller="Home" asp-action="Index">Server</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Guest" asp-controller="Home" asp-action="Index">Workstation</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="User" asp-controller="Ticket" asp-action="Index">Ticket</a>
						</li>
						<!-- CONTENT MANAGEMENT (ADMIN ONLY) -->
						@if (User.IsInRole(StaticDetails.ROLE_ADMIN))
						{
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">Content Management</a>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item text-dark" asp-area="Admin" asp-controller="QueueGroup" asp-action="Index">Queue Group</a>
									</li>
									<li class="nav-item">
										<a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Department" asp-action="Index">Departments</a>
									</li>
									<li class="nav-item">
										<a class="dropdown-item text-dark" asp-area="Admin" asp-controller="QueueService" asp-action="Index">Services</a>
									</li>
									<li class="nav-item">
										<a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Profile" asp-action="Index">Profiles</a>
									</li>
								</ul>
							</li>
						}

					</ul>

					<!-- Login and Register links on the right side -->
					<ul class="navbar-nav ms-auto">
						<partial name="_LoginPartial" />
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			<partial name="_Notification" />
			@RenderBody()
		</main>
	</div>


	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - QueuePulse - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.15.3/dist/sweetalert2.all.min.js"></script>

	@await RenderSectionAsync("Scripts", required: false)


</body>
</html>
